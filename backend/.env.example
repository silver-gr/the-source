# UnifiedSaved Backend Configuration
# Copy this file to .env and fill in your values

# Application Settings
UNIFIED_APP_NAME=UnifiedSaved
UNIFIED_APP_VERSION=0.1.0
UNIFIED_DEBUG=true
UNIFIED_ENVIRONMENT=development

# Server Settings
UNIFIED_HOST=0.0.0.0
UNIFIED_PORT=8000

# Database Settings (relative to backend directory)
# UNIFIED_DATABASE_PATH=../data/unified.db

# CORS Settings (comma-separated origins)
# UNIFIED_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Pagination Defaults
UNIFIED_DEFAULT_PAGE_SIZE=50
UNIFIED_MAX_PAGE_SIZE=200

# Reddit API Settings (optional, for syncing saved posts)
# UNIFIED_REDDIT_CLIENT_ID=your_client_id
# UNIFIED_REDDIT_CLIENT_SECRET=your_client_secret
# UNIFIED_REDDIT_USER_AGENT=UnifiedSaved/0.1.0
